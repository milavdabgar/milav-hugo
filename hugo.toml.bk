# If your site is in 'https', then make sure your base url isn't written using 'http' otherwise your sitemap would
# contain http (as opposeed to https) URLs. This would affect Google indexing of your URLs.
baseURL = "https://milav.in"
title = "Milav"
theme = ["hugo-PaperMod"]

# Enable features
copyright = "Milav Dabgar"
enableEmoji = true
enableRobotsTXT = true
enableGitInfo = false
enableInlineShortcodes = true
buildDrafts = false
buildFuture = false
buildExpired = false
pygmentsUseClasses = true
mainsections = ["posts", "papermod"]

[taxonomies]
  category = "categories"
  tag = "tags"
  series = "series"

[outputs]
  home = ["HTML", "RSS", "JSON"]

[markup]
  [markup.goldmark]
    [markup.goldmark.renderer]
      unsafe = true
  [markup.highlight]
    noClasses = false
    # anchorLineNos = true
    # codeFences = true
    # guessSyntax = true
    # lineNos = true
    # style = "monokai"
  [markup.tableOfContents]
    endLevel = 3
    ordered = false
    startLevel = 2
  [markup.mermaid]
    theme = "default"
    align = "center"
  [markup.math]
    enable = true
    provider = "katex"

[services]
  [services.instagram]
    disableInlineCSS = true
  # Removing twitter service as it's deprecated

[minify]
  disableXML = true
  # minifyOutput = true

[params]
  env = "production" # to enable google analytics, opengraph, twitter-cards and schema.
  description = "Theme PaperMod - https://github.com/adityatelange/hugo-PaperMod"
  author = "Theme PaperMod"
  # author = ["Me", "You"] # multiple authors

  defaultTheme = "auto"
  # disableThemeToggle = true
  ShowShareButtons = true
  ShowReadingTime = true
  # disableSpecial1stPost = true
  displayFullLangName = true
  ShowPostNavLinks = true
  ShowBreadCrumbs = true
  ShowCodeCopyButtons = true
  ShowRssButtonInSectionTermList = true
  ShowAllPagesInArchive = true
  ShowPageNums = true
  ShowToc = true
  # comments = false
  images = ["images/papermod-cover.png"]

  [params.homeInfoParams]
    Title = "PaperMod's Demo"
    Content = """
      👋 Welcome to demo page of Hugo's theme PaperMod!

      - **PaperMod**  is designed to be clean and simple but fast and responsive theme with useful feature-set that enhances UX.

      - Feel free to show your support by giving us a star 🌟 on GitHub and sharing with your friends and social media .

      - PaperMod is based on theme [Paper](https://github.com/nanxiaobei/hugo-paper/tree/4330c8b12aa48bfdecbcad6ad66145f679a430b3).
      """

    # Social icons
    [[params.homeInfoParams.socialIcons]]
      name = "github"
      url = "https://github.com/milavdabgar"
    [[params.homeInfoParams.socialIcons]]
      name = "linkedin"
      url = "https://www.linkedin.com/in/milavdabgar"
    [[params.homeInfoParams.socialIcons]]
      name = "email"
      url = "mailto:milav@milav.in"

  [params.editPost]
    URL = "https://github.com/adityatelange/hugo-PaperMod/tree/exampleSite/content"
    Text = "Suggest Changes" # edit text
    appendFilePath = true # to append file path to Edit link

  # [params.label]
  # iconSVG = '<svg xmlns="http://www.w3.org/2000/svg" height="25" viewBox="0 -960 960 960" fill="currentColor"><path d="M320-240h320v-80H320v80Zm0-160h320v-80H320v80ZM240-80q-33 0-56.5-23.5T160-160v-640q0-33 23.5-56.5T240-880h320l240 240v480q0 33-23.5 56.5T720-80H240Zm280-520v-200H240v640h480v-440H520ZM240-800v200-200 640-640Z"/></svg>'
